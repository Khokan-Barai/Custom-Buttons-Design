<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custon_button_1"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_2"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="#FA71CD"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_3"/>
    <Button
        android:id="@+id/butto4"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_4"/>
    <Button
        android:id="@+id/butto5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Go"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_5"/>
    <Button
        android:id="@+id/butto6"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Click to Change"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_6"/>

</LinearLayout>